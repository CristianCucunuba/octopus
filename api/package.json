        "serverless-plugin-warmup": "^6.2.0",
        "serverless-pseudo-parameters": "^2.6.1",
        "serverless-webpack": "^5.6.0",
        "source-map-support": "^0.5.21",
        "ts-loader": "^9.2.6",
