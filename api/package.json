        "@prisma/client": "^3.8.1",
        "@types/cheerio": "^0.22.30",
        "@types/jest": "^27.4.0",
        "@types/jsonwebtoken": "^8.5.7",
        "@types/luxon": "^2.0.9",
        "@types/node": "^17.0.8",
        "@types/nodemailer": "^6.4.4",
        "ajv": "^8.8.2",
        "ajv-formats": "^2.1.1",
        "axios": "^0.26.0",
